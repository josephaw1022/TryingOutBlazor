@page "/"

@code {

    string[] technologies = new string[] { "@Blazor WASM", "TailwindCSS", "Github", "Netlify" };

    char done = '✅';

    int count = 0;

    void increment()
    {
        count++;
    }
}



<div
    class="min-h-screen min-w-full transform grid grid-cols-1 gap-9  md:grid-cols-3 justify-center items-center  fadeIn">
    <div class="flex flex-col justify-evenly md:items-start items-center">
        @foreach (var tech in technologies)
        {
            <h1
            class="text-2xl text-black my-2 text-center bg-white p-2 rounded-lg mx-10 transform hover:scale-105 duration-200 shadow-lg hover:shadow-xl">
                @done @tech </h1>
        }
    </div>
    <button
        class="p-2 mx-3 bg-white rounded-lg text-black transform w-48 text-center justify-self-center hover:scale-105 duration-200 shadow-lg hover:shadow-xl"
        @onclick="increment">click me
    </button>
    <h1 class="text-white text-2xl md:text-4xl  text-4xl text-center"> @count </h1>
</div>
